{% set nextReads = entry.nextReads.eagerly().all() %}

{% if nextReads|length == 0 %}
  {% set nextReads =  craft.entries.section('blog').id('not ' ~ entry.id).limit(4).all() %}
{% endif %}

{% set content %}
  {% include "blog/_modules/teasers-list" with { articles: nextReads } %}
{% endset %}

{% if nextReads|length %}
  {% include "_modules/next-reads" with {
    heading: "More articles like this"|t,
    sideLink: {
      text: "See all"|t,
      url: blogIndex.url
    },
    entryLink: blogIndex,
    content: content,
  } only %}
{% endif %}
