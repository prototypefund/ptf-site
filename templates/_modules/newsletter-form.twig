{% set darkMode = darkMode is not defined ? true : darkMode %}

<form
  class="relative mb-2.5"
  method="post"
  action="https://te917244a.emailsys1a.net/172/4365/50b2a37e1e/subscribe/form.html"
>
  <input
    class="text-body-18 w-full border-t border-b border-gray-600 bg-white px-2 py-[18px] pr-[153px] text-gray-900 placeholder:text-gray-900 md:h-8 md:px-3 {{
