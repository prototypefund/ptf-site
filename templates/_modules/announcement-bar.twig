{% if announcementBar.enableAnnouncementBar %}
  {% set announcementLink = announcementBar.announcementLink %}

  {% if announcementLink|length %}
    <a
      class="bg-light-blue text-body-12 md:text-body-14 block border-b border-gray-600 px-1.5 py-1.5 text-center uppercase"
      href="{{ announcementLink.url }}"
      target="{{ announcementLink.target }}"
      {{
      announcementLink.target == "_blank"
        ? 'rel="noopener noreferrer"'
        : ""
      }}
    >
      {{ announcementLink.label }}
    </a>
  {% endif %}
{% endif %}
