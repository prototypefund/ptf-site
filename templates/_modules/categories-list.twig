{% set categories = categories|default([]) %}
{% set size = size|default("small") %}

{% set textSize = {
  small: "text-body-12 md:text-body-13",
  large: "text-body-12 md:text-body-14"
} %}

<ul class="flex flex-wrap gap-y-0.5">
  {% for category in categories %}
    <li
      class="dark:text-gray text-gray-700 uppercase {{
      textSize[size]
      }} text-gray after:text-gray after:pr-1 after:pl-[5px] after:content-['|'] last:after:hidden dark:after:text-gray-600"
    >
      {{ category.title }}
    </li>
  {% endfor %}
</ul>
