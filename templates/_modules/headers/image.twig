{% set date = date|default(null) %}
{% set times = times|default([]) %}
{% set text = text|default(null) %}
{% set categories = categories|default([]) %}
{% set image = image|default(null) %}
{% set backLink = backLink|default(null) %}

{% set pattern =
  [
    "after:bg-pattern-br-gray-1 dark:after:bg-pattern-br-dark-gray-3",
    "after:content-['']",
    "after:absolute",
    "after:right-0",
    "after:bottom-0",
    "after:h-full",
    "after:bg-no-repeat",
    "after:bg-contain",
    "after:bg-right-bottom",
    "after:w-[50vw]",
    "after:md:w-[40vw]",
    "after:lg:w-[30vw]"
  ]|join(" ")
%}

<header
  class="{{
  pattern
  }} border-gray relative border-b bg-gray-100 px-2 pt-2.5 pb-5 md:grid md:grid-cols-12 md:px-5 md:py-[60px] lg:grid-cols-16 dark:border-gray-600 dark:bg-gray-800"
>
  <div class="relative z-1 mb-10 md:col-span-6 md:mb-0 lg:col-span-8">
    {% if backLink|length %}
      <div class="mb-6">
        {% include "_modules/button" with {
          url: backLink.url,
          text: backLink.text,
          icon: "arrow",
          border: false
        } only %}
      </div>
    {% endif %}

    {% if date|length %}
      <div
        class="md:text-head-16 dark:text-gray mb-3 text-[15px] text-gray-700"
      >
        {{ date|raw }}
      </div>
    {% endif %}

    <h1
      class="font-surt text-head-22 md:text-head-38 mb-3 uppercase last:mb-0 md:mb-4"
    >
      {{ headline }}
    </h1>

    {% if text|length %}
      <p class="text-body-20">
        {{ text }}
      </p>
    {% endif %}

    {% if categories|length %}
      {% include "_modules/categories-list" with {
        categories,
        size: "large"
      } only %}
    {% endif %}
  </div>

  {% if image|length %}
    {% set caption =
      [image.caption, image.credit]|filter(value => value is not null)
    %}

    <figure
      class="relative z-1 md:col-span-5 md:col-start-8 lg:col-span-6 lg:col-start-11"
    >
      <div class="aspect-4/3">
        <img
          class="block h-full w-full object-cover"
          src="{{ image.getUrl("blogTeaser") }}"
          alt="{{ image.alt }}"
        />
      </div>
      {% if caption|length %}
        <figcaption class="mt-1">
          <ul class="flex flex-wrap gap-y-0.5">
            {% for text in caption %}
              <li
                class="text-body-12 md:text-body-13 after:text-gray dark:text-gray text-gray-700 uppercase after:pr-1 after:pl-[5px] after:content-['|'] last:after:hidden dark:after:text-gray-600"
              >
                {{ text }}
              </li>
            {% endfor %}
          </ul>
        </figcaption>
      {% endif %}
    </figure>
  {% endif %}
</header>
