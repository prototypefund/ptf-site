{% set times = [startTime|default(null), endTime|default(null)]|filter(time => time is not empty) %}

<time class="flex text-head-18" datetime="{{ date|date('Y-m-d') }}">
  {{ date|date('d/m/Y') }}{% if times|length %}<span class="flex items-center before:content-[''] before:h-[15px] before:mr-1.5 before:w-[1px] before:bg-gray-600 pl-1.5">{{ times|map((time) => time|date('H:i'))|join("-") }}</span>{% endif %}
</time>