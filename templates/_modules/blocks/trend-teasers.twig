{% set nextReads = module.trendTeasers.eagerly().all() %}

{% if nextReads|length == 0 %}
  {% set nextReads =  craft.entries.section('trends').limit(4).all() %}
{% endif %}

{% set content %}
  {% include "trends/_modules/teasers-list" with { trends: nextReads } %}
{% endset %}

{% if nextReads|length %}
  {% include "_modules/next-reads" with {
    heading: module.title,
    sideLink: {
      text: "See all"|t,
      url: trendsIndex.url
    },
    entryLink: trendsIndex,
    content: content,
  } only %}
{% endif %}
