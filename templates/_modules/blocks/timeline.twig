{% set context = context|default("web") %}
{% set timeline = module.timeline.one() %}

{% set web %}
  {% set content %}
    {% if timeline|length %}
      {% include "_modules/timeline" with {
        phases: timeline.phases,
        text: timeline.text
      } only %}
    {% endif %}
  {% endset %}

  {% include "_modules/side-heading" with {
    headline: module.title,
    content: content
  } only %}
{% endset %}

{% set rss %}
  <h2>{{ module.title }}</h2>
  {% include "_modules/timeline" with {
    phases: timeline.phases,
    text: timeline.text
  } only %}
{% endset %}

{% switch context %}
  {% case "rss" %}
    {{ rss }}
  {% default %}
    {{ web }}
{% endswitch %}
