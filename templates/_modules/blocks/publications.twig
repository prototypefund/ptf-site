{% set heading = module.title %}
{% set description = module.description %}
{% set publications = module.publications %}

<div class="mb-10 md:px-5">
  <h4 class="px-2 md:px-0 font-surt text-head-22 md:text-head-32 mb-3 md:mb-5">
    {{ heading }}
  </h4>

  <div class="md:grid md:grid-cols-16">
    {% if description|length %}
      <div class="px-2 md:px-0 md:col-span-5 mb-5 md:mb-0">
        {% include "_rich-text/simple" with {
          text: description,
          size: "medium"
        } only %}
      </div>
    {% endif %}
  
    {% for item in publications %}
      {% set publication = item.publication.one() %}
      {% set publicationCover = item.publicationCover.one() %}
      {% set subheading = item.subheading %}

      <div class="px-2 md:px-0 border-t last:border-b border-gray-400 pt-2 pb-4 last:mb-0 md:col-span-10 md:col-start-7 lg:col-start-7 md:grid md:grid-cols-10">
        <div class="mb-3 xl:mb-0 md:col-span-9 lg:col-span-7 flex gap-3">
          {% if publicationCover|length and publication|length %}
            <a class="block flex-shrink-0" href="{{ publication.url }}">
              <img class="block w-[84px] md:w-[84px]" src="{{ publicationCover.url }}" alt="{{ publicationCover.alt }}">
            </a>
          {% endif %}

          <div>
            <h4 class="font-surt text-head-16 md:text-head-20 leading-[1.3] mb-1">
              {{ item.title }}
            </h4>

            {% if subheading|length %}
              <p class="text-body-12 md:text-body-14 text-gray-500">{{ subheading }}</p>
            {% endif %}
          </div>
        </div>

        {% if publication|length %}
          <div class="md:col-span-9 md:col-start-1 xl:col-span-3 text-right md:text-left xl:text-right">
            {% include "_modules/button-link" with {
              text: "Open PDF"|t,
              url: publication.url,
              icon: "arrow",
              iconAlignment: "right"
            } only %}
          </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>