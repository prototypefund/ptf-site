{% set heading = module.title %}
{% set description = module.description %}
{% set publications = module.publications %}

<div class="mb-10 md:px-5">
  <h4
    class="font-surt text-head-22 md:text-head-32 mb-3 max-w-2/5 px-2 md:mb-5 md:px-0"
  >
    {{ heading }}
  </h4>

  <div class="md:grid md:grid-cols-16">
    {% if description|length %}
      <div class="mb-5 px-2 md:col-span-5 md:mb-0 md:px-0">
        {% include "_rich-text/simple" with {
          text: description,
          size: "medium"
        } only %}
      </div>
    {% endif %}

    {% for item in publications %}
      {% set publication = item.publication.one() %}
      {% set publicationCover = item.publicationCover.one() %}
      {% set subheading = item.subheading %}

      <a
        class="group border-gray block border-t px-2 pt-2 pb-4 last:mb-0 last:border-b md:col-span-10 md:col-start-7 md:grid md:grid-cols-10 md:px-0 lg:col-start-7 dark:border-gray-600"
        href="{{ publication.url }}"
      >
        <div class="mb-3 flex gap-3 md:col-span-9 lg:col-span-7 xl:mb-0">
          {% if (publicationCover|length) and (publication|length) %}
            <div class="block flex-shrink-0" href="{{ publication.url }}">
              <img
                class="block w-[84px] md:w-[84px]"
                src="{{ publicationCover.url }}"
                alt="{{ publicationCover.alt }}"
              />
            </div>
          {% endif %}

          <div>
            <h4
              class="font-surt text-head-16 md:text-head-20 mb-1 leading-[1.3]"
            >
              {{ item.title }}
            </h4>

            {% if subheading|length %}
              <p
                class="text-body-12 md:text-body-14 dark:text-gray text-gray-700"
              >
                {{ subheading }}
              </p>
            {% endif %}
          </div>
        </div>

        {% if publication|length %}
          <div
            class="text-right md:col-span-9 md:col-start-1 md:text-left xl:col-span-3 xl:text-right"
          >
            {% include "_modules/button" with {
              text: "Open PDF"|t,
              icon: "arrow",
              iconAlignment: "right"
            } only %}
          </div>
        {% endif %}
      </a>
    {% endfor %}
  </div>
</div>
