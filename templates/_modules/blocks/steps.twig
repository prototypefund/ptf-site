{% set heading = module.title %}
{% set steps = module.steps %}

<div class="mb-10 px-2 md:px-5">
  <h4 class="font-surt text-head-22 md:text-head-32 mb-3 md:mb-5">
    {{ heading }}
  </h4>

  {% if steps|length %}
    <div class="md:flex border-y border-gray-600">
      {% for step in steps %}
        <div
          class="px-2 md:px-2.5 py-3 md:py-4 md:w-1/3 border-l border-gray-600 border-b md:border-b-0 last:border-b-0 border-r md:border-r-0 last:border-r"
        >
          <h5
            class="font-surt text-head-22 md:text-head-38 mb-14 md:mb-15 text-rich-blue"
          >
            0{{ loop.index }}
          </h5>

          {% include "_rich-text/simple" with {
            text: step.stepText,
            size: "large"
          } only %}
        </div>
      {% endfor %}
    </div>
  {% endif %}
</div>
