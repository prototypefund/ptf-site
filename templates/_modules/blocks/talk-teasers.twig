{% set nextReads = module.talkTeasers.eagerly().all() %}

{% if (nextReads|length) == 0 %}
  {% set nextReads = craft.entries.section("talks").limit(3) %}
{% endif %}

{% set content %}
  {% for talk in nextReads %}
    {{ talk.render() }}
  {% endfor %}
{% endset %}

{% if nextReads|length %}
  {% include "_modules/next-reads" with {
    heading: module.title,
    sideLink: {
      text: "See all"|t,
      url: eventsIndex.url
    },
    content: content
  } only %}
{% endif %}
