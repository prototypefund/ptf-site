{% set nextReads = module.eventNextReads.eagerly().all() %}

{% if nextReads|length == 0 %}
  {% set nextReads = craft.entries.section('events')
    .date('>=' ~ now|date('Y-m-d'))
    .orderBy('date')
    .limit(3)
  %}
{% endif %}

{% set content %}
  {% include "events/_modules/teasers-list" with { events: nextReads } %}
{% endset %}

{% if nextReads|length %}
  {% include "_modules/next-reads" with {
    heading: module.title,
    sideLink: {
      text: "See all"|t,
      url: eventsIndex.url
    },
    entryLink: eventsIndex,
    content: content,
  } only %}
{% endif %}
