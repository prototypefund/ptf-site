{% extends "_layouts/layout.twig" %}
{% set homepage = craft.entries.section("homepage").one() %}

{% set text %}
  <h1>{{ "404!"|t }}</h1>
  <p>{{ "Page not found"|t }}</p>
  <p><a class="button" href="{{ homepage.getUrl() }}">{{ "Return to homepage"|t }}</a></p>
{% endset %}

{% block content %}
  <article class="max-w-4xl mx-auto px-2 md:px-4 lg:px-6 pb-2 md:pb-4 lg:pb-6">
    {% include "_rich-text/standard" with { text: text } only %}
  </article>
{% endblock %}
