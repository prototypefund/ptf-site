{% extends "_layouts/layout.twig" %}

{% block content %}
  <article>
    <header
      class="after:bg-pattern-br-hot-pink before:bg-pattern-tl-hot-pink bg-navy-blue relative flex items-center justify-center px-2 py-10 text-white before:absolute before:top-0 before:left-0 before:h-full before:w-[calc(18vw+16px)] before:bg-contain before:bg-top-left before:bg-no-repeat before:content-[''] after:absolute after:right-0 after:bottom-0 after:h-full after:w-[calc(18vw+16px)] after:bg-contain after:bg-right-bottom after:bg-no-repeat after:content-[''] md:h-[calc(100vh-150px)] md:px-5 before:md:w-[calc(18vw+40px)] after:md:w-[calc(18vw+40px)] lg:py-[100px] before:lg:w-[calc(13vw+40px)] after:lg:w-[calc(13vw+40px)]"
