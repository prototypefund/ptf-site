{% set image = entry.mainImage.eagerly().one() %}
{% set inFunding = "inUsage" in entry.projectStatus %}
{% set claim = entry.claim %}
{% set teamMembers = entry.projectTeamMembers %}

{% set categories = entry.projectRounds.all()
  |merge(entry.projectTopics.all())
  |merge(entry.projectTechnologies.all())
  |merge(entry.projectYearGroups.all()) %}

<article class="border-gray-400 border-t mb-5">
  <a class="block pt-2.5" href="{{ entry.getUrl() }}">
    <div class="group grid grid-cols-11">
      <div class="col-span-2 mr-3.5">
        {% if image|length %}
          <div class="bg-gray-100 flex items-center justify-center h-[10.625rem] p-[1.25rem]">
            <div class="w-full h-[9.375rem] mix-blend-multiply">
              <img class="w-full h-full object-contain " src="{{ image.url }}" alt="{{ image.alt }}">
            </div>
          </div>
        {% else %}
          <img class="block w-full h-full object-cover" src="/static/images/patterns/project-fallback-pattern.svg">
        {% endif %}
      </div>

      <div class="col-span-9">
        {% if inFunding|length %}
          <div>
            <div class="bg-pink inline-block rounded-sm uppercase text-ui-13 px-1 py-0.5 mb-2">{{ "In Funding"|t }}</div>
          </div>
        {% endif %}

        <h3 class="uppercase font-surt text-head-22 tracking-[0.03em] mb-1.5">
          <span class="text-rich-blue">{{ entry.title }}</span>{% if claim|length %}: {{ claim }}{% endif %}
        </h3>

        {% if teamMembers|length %}
          <div class="text-body-14 mb-2.5 last:mb-0">{{ teamMembers }}</div>
        {% endif %}

        {% if categories|length %}
          <ul class="flex flex-wrap gap-y-0.5">
            {% for category in categories %}
              <li class="text-gray-500 uppercase text-body-12 md:text-body-13 after:px-1 after:content-['|'] after:text-gray-400 last:after:hidden">{{ category.title }}</li>
            {% endfor %}
          </ul>
        {% endif %}
      </div>
    </div>
  </a>
</article>
