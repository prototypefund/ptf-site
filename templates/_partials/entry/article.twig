{% set image = entry.mainImage.eagerly().one() %}
{% set categories = entry.blogCategories.all() %}
{% set postDate = entry.postDate %}

<article class="mb-4 border-t border-gray-600 md:mb-0">
  <a class="block pt-2.5" href="{{ entry.getUrl() }}">
    <div class="group mb-3 grid grid-cols-8 gap-3 md:mb-0">
      <div class="col-span-5 flex flex-col">
        <time
          class="text-ui-14 md:text-ui-16 mb-1 text-gray-800 md:mb-2"
          datetime="{{ postDate|date("Y-m-d") }}"
        >
          {{ postDate|date("d/m/Y") }}
        </time>

        <div class="mb-3 last:mb-0">
          <h4
            class="font-surt text-body-16 sm:text-head-22 group-hover:decoration-sky-blue mb-1 inline uppercase group-hover:underline"
          >
            {{ entry.title }}
          </h4>
        </div>

        {% if categories|length %}
          <div class="mt-auto hidden sm:block">
            {% include "_modules/categories-list" with {
              categories
            } only %}
          </div>
        {% endif %}
      </div>

      <div class="col-span-3">
        <div class="aspect-4/3">
          {% if image|length %}
            <img
              class="block h-full w-full object-cover"
              src="{{ image.getUrl("blogTeaser") }}"
              alt="{{ image.alt }}"
            />
          {% else %}
            <div class="h-full bg-gray-100"></div>
          {% endif %}
        </div>
      </div>
    </div>

    {% if categories|length %}
      <div class="mt-auto sm:hidden">
        {% include "_modules/categories-list" with {
          categories
        } only %}
      </div>
    {% endif %}
  </a>
</article>
