{% set fallbackImageUrl = "https://placehold.co/400x300" %}
{% set imageUrl = (entry.mainImage.eagerly().one().getUrl("blogTeaser"))|default(fallbackImageUrl) %}

<article class="col-span-3 md:col-span-1">
  <a class="block" href="{{ entry.getUrl() }}">
    <img class="mb-1 w-full aspect-4/3 bg-[#4b5563]" src="{{ imageUrl }}">
    <h3 class="text-body-24 font-bold mb-1">{{ entry.title }}</h3>
    <p>{{ entry.text|striptags|truncate(120)|raw }}</p>
  </a>
</article>
