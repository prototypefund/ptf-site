{% set meta = [entry.location, entry.speakers] %}
{% set link = entry.genericLink %}

<article
  class="border-t md:last:border-b border-gray-600 pt-2 pb-3 md:pt-3 md:py-6"
>
  <div class="md:grid md:grid-cols-16">
    <div class="mb-4 md:mb-0 md:col-span-4 md:pr-4">
      <div class="mb-1 md:mb-1.5">
        {% include "_modules/date-time" with {
          date: entry.date,
          startTime: entry.startTime,
          endTime: entry.endTime
        } only %}
      </div>
    </div>

    <div class="md:col-span-9 md:pr-4 mb-3 xl:mb-0">
      <h4 class="font-surt text-head-18 md:text-head-22 uppercase mb-1">
        {{ entry.title }}
      </h4>

      <ul class="flex text-body-18 text-gray-800">
        {% for item in meta %}
          <li
            class="flex flex-nowrap items-center first:before:hidden before:content-[''] before:h-[15px] before:mr-1.5 before:w-[1px] before:bg-gray-600 pl-1.5 first:pl-0"
          >
            {{ item }}
          </li>
        {% endfor %}
      </ul>
    </div>

    {% if link|length %}
      <div
        class="md:col-span-9 md:col-start-5 xl:col-span-3 xl:col-start-14 text-right md:text-left xl:text-right"
      >
        {% include "_modules/button-generic-link" with {
          link: link
        } only %}
      </div>
    {% endif %}
  </div>
</article>
