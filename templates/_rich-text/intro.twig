{{
  text
    |retcon(
      [
        ["removeEmpty", "p"],
        [
          "attr",
          "p",
          {
            class: "font-surt text-navy-blue dark:text-light-pink text-body-20 md:text-head-22 mb-[1em] last:mb-0"
          },
          false
        ],
        [
          "attr",
          "a",
          {
            class: "underline decoration-sky-blue hover:bg-light-blue dark:hover:text-gray-900"
          },
          false
        ],
        [
          "attr",
          ".highlighted",
          {
            class: "bg-sky-blue dark:bg-dark-magenta"
          }
        ]
      ]
    )
    |raw
}}
