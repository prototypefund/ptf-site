<div
  class="{{ [
    "grid",
    "px-2",
    "mb-10",
    "md:px-5",
    "md:grid-cols-16",
    "md:[&>*]:col-start-6",
    "md:[&>*]:col-span-11",
    "md:[&>div]:col-span-16",
    "md:[&>div]:px-0",
    "md:[&>div]:mt-10",
    "md:[&>blockquote]:col-start-6",
    "md:[&>blockquote]:col-span-10",
    "lg:[&>*]:col-start-8",
    "lg:[&>*]:col-span-9"
  ]|join(" ") }}"
>
  {% include "_rich-text/standard" with {
    text: text|replace({
      '/<div class="col-xs-24">/': "",
      "/<\/div>$/": ""
    })
  } only %}
</div>
