{% set size = size|default(null) %}

{% switch size %}
  {% case "small" %}
    {% set sizeClasses = "text-body-12 md:text-body-14" %}
  {% case "medium" %}
    {% set sizeClasses = "text-body-16 md:text-body-18" %}
  {% case "large" %}
    {% set sizeClasses = "text-body-18 md:text-body-20" %}
  {% default %}
    {% set sizeClasses = "text-body-14 md:text-body-16" %}
{% endswitch %}

{{ text|retcon([
  ['removeEmpty', 'p'],
  ["attr", "p", { class: "mb-2 last:mb-0 #{sizeClasses}"}],
  ['attr', 'a', { class: 'underline decoration-sky-blue hover:bg-light-blue'}, false],
])|raw }}
