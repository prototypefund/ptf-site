{% set inclusiveSansRegular = fonts.inclusiveSansRegular.one() %}
{% set inclusiveSansSemibold = fonts.inclusiveSansSemibold.one() %}
{% set inclusiveSansSemiboldItalic = fonts.inclusiveSansSemiboldItalic.one() %}
{% set surtRegular = fonts.surtRegular.one() %}
{% set surtBold = fonts.surtBold.one() %}

<style>
  {% if inclusiveSansRegular|length %}
    @font-face {
      font-family: "Inclusive Sans";
      src: url("{{ inclusiveSansRegular.url }}") format("woff2");
      font-weight: 400;
      font-style: normal;
      font-display: swap;
    }
  {% endif %}

  {% if inclusiveSansSemibold|length %}
    @font-face {
      font-family: "Inclusive Sans";
      src: url("{{ inclusiveSansSemibold.url }}") format("woff2");
      font-weight: 700;
      font-style: normal;
      font-display: swap;
    }
  {% endif %}

  {% if inclusiveSansSemiboldItalic|length %}
    @font-face {
      font-family: "Inclusive Sans";
      src: url("{{ inclusiveSansSemiboldItalic.url }}") format("woff2");
      font-weight: 700;
      font-style: italic;
      font-display: swap;
    }
  {% endif %}

  {% if surtRegular|length %}
    @font-face {
      font-family: "Surt";
      src: url("{{ surtRegular.url }}") format("woff");
      font-weight: 400;
      font-style: normal;
      font-display: swap;
    }
  {% endif %}

  {% if surtBold|length %}
    @font-face {
      font-family: "Surt";
      src: url("{{ surtBold.url }}") format("woff2");
      font-weight: 700;
      font-style: normal;
      font-display: swap;
    }
  {% endif %}
</style>