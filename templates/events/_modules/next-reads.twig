{% set heading = "More events more like this"|t %}
{% set nextReads = entry.eventNextReads.eagerly().all() %}

{% if nextReads|length == 0 %}
  {% set heading = "More upcoming events"|t %}
  {% set nextReads = craft.entries.section('events')
    .id('not ' ~ entry.id)
    .date('>=' ~ now|date('Y-m-d'))
    .orderBy('date')
    .limit(4)
  %}
{% endif %}

{% set content %}
  {% include "events/_modules/teasers-list" with { events: nextReads } %}
{% endset %}

{% if nextReads|length %}
  {% include "_modules/next-reads" with {
    heading: "More upcoming events"|t,
    sideLink: {
      text: "See all"|t,
      url: eventsIndex.url
    },
    entryLink: eventsIndex,
    content: content,
  } only %}
{% endif %}
